#13
'''t=int(input())
for i in range(t):
    a,b,c,d=map(int,input().split())
    a=a-c
    b=b-d
    if(a==b):
        print("Any")
    elif(a<b):
        print("First")
    else:
        print("Second")'''

#14
'''t=int(input())
for i in range(t):
    n,x=map(int,input().split())
    if(x>n):
        print(0)
    else:
        if((n-x)%4==0):
          print((n-x)//4)
        else:
          print(((n-x)//4)+1) '''

#15
'''t=int(input())
for i in range (t):
    n,x=map(int,input().split())
    k=x*n
    if(k%4==0):
        print(k//4)
    else:
        print((k//4)+1)'''

#15 spare
t=int(input())
for i in range (t):
    n,x=map(int,input().split())
    i=0
    x=x*n
    while(x>=4):
        x=x-4
        i=i+1
    if x>0:
        print(i+1)
    else:
        print(i)




    

    
